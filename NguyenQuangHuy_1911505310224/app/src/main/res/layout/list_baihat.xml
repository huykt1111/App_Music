        android:id="@+id/tvTenBH"
        android:textColor="#f20"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Tên bài hát"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvtime"
